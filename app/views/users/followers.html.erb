<h1>フォロワー一覧</h1>

  <table class="table">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <% @followers.each do |user| %>
      <tr>
        <td><%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size:'100x100' %></td>
        <td><%= user.name %></td>
        <td><%= "フォロー数：#{user.following_user.count}" %></td>
        <td><%= "フォロワー数：#{user.follower_user.count}" %></td>
        <td><%= link_to "Show", user_path(user.id) %></td>
      </tr>
    <% end %>
  </table>