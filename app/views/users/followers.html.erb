<div class="container row mx-auto mt-3">
  <div class="users mx-auto col-md-12">
    <h3 class="text-center text-secondary">フォロワー一覧</h3>
      <table class="users-table table table-hover col-md-9 mt-3 mx-auto">
        <thead>
          <tr>
            <th></th>
            <th>Image</th>
            <th>Name</th>
          </tr>
        </thead>
        <% @followers.each do |user| %>
          <tr onclick='window.location="<%= '/users/' + user.id.to_s %>"' role="link">
            <td></td>
            <td>
            <%= link_to (user) do %>
              <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: 'no_image.jpeg', size:'40x40', class:"rounded-circle"; %>
            <% end %>
            </td>
            <td><%= link_to user.name, user_path(user), class: 'text-dark h3' %></td>
          </tr>
        <% end %>
      </table>
      <%= paginate @followers %>
  </div>
</div>