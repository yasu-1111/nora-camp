<div class="container">
  <div class="row">
    <div class="mx-auto col-md-5">
      <h1 class="mb-5">新規投稿</h1>
        <%= form_with model: @post, local: true do |f| %>
          <%= render 'form_post', f: f %>
          <%= f.submit "投稿する", class: 'btn btn-success btn-lg mx-auto d-block' %>
        <% end %>
    </div>
  </div>
</div>