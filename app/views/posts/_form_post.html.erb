<div class="post-form">
  <div class="form-group row">
    <p class="col-md-5">画像</p>
      <div class="col-md-6">
          <%= f.attachment_field :post_images_images, multiple: true, class: 'form-field p-0' %>
      </div>
  </div>
        <div class="col-md-12 mb-5">
          <img id="preview_0" style="width:15%;">
          <img id="preview_1" style="width:15%;">
          <img id="preview_2" style="width:15%;">
          <img id="preview_3" style="width:15%;">
          <img id="preview_4" style="width:15%;">
        </div>
  <div class="form-group row col-md-10">
    <%= f.label :"タイトル", class: "col-sm-5 control-label" %>
    <%= f.text_field :title, class: "col-sm-6 form-control-static name" %>
  </div><br />
  <div class="form-group row col-md-10">
    <%= f.label :"本文", class: "col-sm-5 control-label" %>
    <%= f.text_area :caption, rows: '5', class: "col-sm-6 control-label explanation" %>
  </div>
</div>