<div class="container row mx-auto">
    <div class="list col-md-12">
      <div class ="row">
        <% posts.each do |post| %>
        <div class="col-md-4 p-2">
          <div class="list-card card">
            <% post.post_images.each_with_index do |image,index| %>
              <% if index ==0 %>
                <%= link_to (post) do %>
                  <%= attachment_image_tag image, :image, format: 'jpeg', fallback: 'no_image.jpeg', size:'200x250', class: "c-img card-img-top" %>
                <% end %>
              <% end %>
            <% end %>
          <div class="c-body card-body">
              <div class="row">
                <div class="c-body-img col-md-2">
                  <%= attachment_image_tag post.user, :profile_image, format: 'jpeg', fallback: 'no_image.jpeg', size:'20x20', class:"mt-3 rounded-circle"; %>
                </div>
                <div class="c-body-child col-md-10 ">
                  <p class="card-title col-md-12">投稿者<span class="name ml-5"><%= link_to post.user.name, user_path(post.user.id), class: 'text-dark' %></span></p>
                  <p class="card-title col-md-12">タイトル<span class="ml-3">　<%= link_to post.title, post_path(post.id), class: 'text-dark' %></span></p>
                  <p class="card-title col-md-12">
                    <span><%= icon("fas", "comment-alt", class: "text-success") %> <%= post.post_comments.count %>コメント</span>
                    <span><%= icon("fas", "heart", class: "text-danger") %> <%= post.favorites.count %>いいね</span>
                  </p>
                </div>
              </div>
          </div>
          </div>
        </div>
        <% end %>
      </div>
      <%= paginate @posts %>
    </div>
</div>