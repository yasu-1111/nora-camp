<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class ="row">
        <% posts.each do |post| %>
        <div class="col-md-4 p-2">
          <div class="card">
            <% post.post_images.each_with_index do |image,index| %>
              <% if index ==0 %>
                <%= attachment_image_tag image, :image, format: 'jpeg', fallback: 'no_image.jpeg', size:'200x250', class: "card-img-top" %>
              <% end %>
            <% end %>
          <div class="card-body">
            <div class="container">
              <div class="row">
                <div class="col-md-2">
                  <%= attachment_image_tag post.user, :profile_image, format: 'jpeg', fallback: 'no_image.jpeg', size:'20x20', class:"mt-3 rounded-circle"; %>
                </div>
                <div class="col-md-10 ">
                  <p class="card-title">投稿者：<%= post.user.name %></p>
                  <p class="card-title">タイトル：<%= link_to post.title, post_path(post.id) %></p>
                  <p class="card-title"><%= link_to "#{post.post_comments.count}コメント", post_path(post.id) %></p>
                </div>
              </div>
            </div>
          </div>
          </div>
        </div>
    <% end %>
      </div>
    </div>
  </div>
</div>